@model About
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Deneyimler</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Deneyim Ekleme Sayfası</div>
                        </div>
                        <div class="card-sub">
                            Deneyim ekleme işlemleri için veri girişi sağlayınız.
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <label>Firma Bilgisi</label>
                                <input type="text" asp-for="Title" class="form-control" />
                                <br />
                                <label>Çalışılan Pozisyon</label>
                                <input type="text" asp-for="SubDescription" class="form-control" />
                                <br />
                                <label>Tarih Aralığı</label>
                                <input type="text" asp-for="Details" class="form-control" />
                                <br />
                                <button class="btn btn-outline-primary" style="border-radius:30px">Hakkımda Bilgisi Ekle</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model Feature
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Özellik</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Özellik Güncelleme Sayfası</div>
                        </div>
                        <div class="card-sub">
                            Özellik Bilgisi güncelleme işlemi için verileri düzenleyiniz.
                        </div>
                        <div class="card-body">
                            <form method="post">

                                <input type="hidden" asp-for="FeatureId" />
                                <label>Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <textarea rows="2" asp-for="Description" class="form-control"></textarea>
                                <br />

                                <button class="btn btn-outline-success" style="border-radius:30px">Özellik Bilgisi Güncelle</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model List<Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Özellikler</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Özellikler Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Özellikler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>

                                        <th scope="col">Başlık</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger" style="border-radius:30px">Sil</a></td>
                                            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success" style="border-radius:30px">Güncelle</a></td>
                                        </tr>
                                    }
                                
                                </tbody>
                            </table>
                            <a href="/Feature/CreateFeature/" class="btn btn-outline-primary" style="border-radius:30px">Yeni Özellik Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
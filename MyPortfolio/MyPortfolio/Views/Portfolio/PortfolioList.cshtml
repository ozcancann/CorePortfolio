@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Projeler</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Projeler Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Projeler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>

                                        <th scope="col">Başlık</th>
                                        <th scope="col">Alt Başlık</th>
                                        <th scope="col">Fotoğraf</th>
                                        <th scope="col">Linkedin & Github Linki</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>@item.Title</td>
                                            <td>@item.SubTitle</td>
                                            <td><img src="@item.ImageUrl" style="width: 200px; height: 200px;" /></td>
                                            <td>@item.Url</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger" style="border-radius:30px">Sil</a></td>
                                            <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-outline-success" style="border-radius:30px">Güncelle</a></td>

                                        </tr>

                                    }

                                </tbody>
                            </table>
                            <a href="/Portfolio/CreatePortfolio" class="btn btn-outline-primary" style="border-radius:30px">Yeni Proje Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

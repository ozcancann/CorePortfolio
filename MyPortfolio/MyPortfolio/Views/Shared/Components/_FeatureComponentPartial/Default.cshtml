@model List<MyPortfolio.DAL.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://img.freepik.com/free-photo/silhouette-tree-against-spooky-night-sky-mysterious-landscape-generative-ai_188544-12791.jpg?t=st=1732467914~exp=1732471514~hmac=903450098e98f7dba1df2904a244edac015f08ed8534d2b139e2d20228af28ae&w=1380" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach (var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                   @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        PROJELER
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        HAKKIMDA
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>SAYFAYI KAYDIR</span>
                    </a>
                </div>

            </div>

        </div>
    }

 

    <ul class="home-social">
        <li>
            <a href="#"><i class="im im-facebook" aria-hidden="true"></i><span>Facebook</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-twitter" aria-hidden="true"></i><span>Twitter</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-behance" aria-hidden="true"></i><span>Behance</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-pinterest" aria-hidden="true"></i><span>Pinterest</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>
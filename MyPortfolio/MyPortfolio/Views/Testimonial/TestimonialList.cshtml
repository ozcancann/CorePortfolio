@model List<Testimonial>

@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Referans</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Referanslar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">Referans Numarası</th>
                                        <th scope="col">Referansın Adı Soyadı</th>
                                        <th scope="col">Referansın Çalıştığı Departman</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId"  class="btn btn-outline-danger" style="border-radius:30px">Sil</a></td>
                                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId"  class="btn btn-outline-success" style="border-radius:30px">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-primary" style="border-radius:30px">Yeni Referans Girişi<a />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>